<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laba_1.Views.LibrarianBooksPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Добавить" Clicked="AdBook_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Книга 1" VerticalOptions="Center"/>
                <Button x:Name="btnDeleteBook" 
                        Text="Удалить"
                        Clicked="btnDeleteBook_Clicked"
                        FontSize="Small"
                        HorizontalOptions="End"/>
                <Button x:Name="btnEditBook" 
                        Text="Редактировать"
                        Clicked="btnEditBook_Clicked"
                        FontSize="Small"
                        HorizontalOptions="End"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>