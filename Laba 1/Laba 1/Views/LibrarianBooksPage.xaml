<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laba_1.Views.LibrarianBooksPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Добавить" Clicked="AdBook_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal">
            <Label Text="Книга 1"/>
            <Button x:Name="btnDeleteBook" 
                    Text="Просмотр статистики"
                    Clicked="btnDeleteBook_Clicked"/>
            <Button x:Name="btnEditBook" 
                    Text="Просмотр статистики"
                    Clicked="btnEditBook_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>